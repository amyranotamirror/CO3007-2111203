#ifndef INC_BUTTON_H_
#define INC_BUTTON_H_

#include "global.h"
enum BUTTON_STATE {IS_RELEASE,
				   IS_PRESSED,
				   IS_LONG_PRESSED};

typedef struct _Button{
	GPIO_config physical;
	GPIO_PinState state;
	int counterForLongPress; // Delay before auto increase
	uint8_t flagToResponse;	  	 // Allow to increase
	uint8_t flagForLongPress;	 // Delay state
} Button;

void initButton();
void readButton();
uint16_t isButtonPressed(uint16_t ID);
uint16_t isButtonLongPressed(uint16_t ID);

#endif /* INC_BUTTON_H_ */
