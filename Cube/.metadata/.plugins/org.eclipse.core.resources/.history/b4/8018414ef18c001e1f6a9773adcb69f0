#ifndef INC_GLOBAL_H_
#define INC_GLOBAL_H_

#include "main.h"
#define FLAG_ON		GPIO_PIN_RESET
#define FLAG_OFF 	GPIO_PIN_SET

// Port & Pin setup
typedef struct _GPIO_config{
	GPIO_TypeDef * port;
	uint16_t pin;
} GPIO_config;

typedef enum {
	ERROR_SCH_TOO_MANY_TASKS = 0,
	ERROR_SCH_WAITING_FOR_SLAVE_TO_ACK,
	ERROR_SCH_WAITING_FOR_START_COMMAND_FROM_MASTER,
	ERROR_SCH_ONE_OR_MORE_SLAVES_DID_NOT_START,
	ERROR_SCH_LOST_SLAVE,
	ERROR_SCH_CAN_BUS_ERROR,
	ERROR_I2C_WRITE_BYTE_AT24C64
}_Error_code;
static _Error_code Error_code_G = 0;
#endif /* INC_GLOBAL_H_ */
