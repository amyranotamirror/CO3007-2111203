#include "led_indicator.h"

/* Private define / macros */

/* Public function declaration */
void initLEDIndicator(){


	// Turn all LEDs off
	for(uint16_t index = 0; index < NO_LED; index++){
		HAL_GPIO_WritePin(ledArray[index].connection.port, ledArray[index].connection.pin, LED_OFF);
	}
	// Turn LED oneshot on
	HAL_GPIO_WritePin(ledArray[LED_ONESHOT].connection.port, ledArray[LED_ONESHOT].connection.pin, LED_ON);
}


