#ifndef INC_LED_INDICATOR_H_
#define INC_LED_INDICATOR_H_

#include "global.h"
#include "timer.h"

/* Public define / macros */
typedef enum {LED_500 = 0,
			  LED_1000,
			  LED_1500,
			  LED_2000,
			  LED_2500,
			  LED_ONESHOT,
			  LED_BUTTON } LED_INDICATOR;

typedef struct {
	GPIO_config *connection;
	GPIO_PinState state;

};

/* Public function declaration */
void initLEDIndicator();
void changeLEDState(LED_INDICATOR led, GPIO_PinState state);
#endif /* INC_LED_INDICATOR_H_ */
